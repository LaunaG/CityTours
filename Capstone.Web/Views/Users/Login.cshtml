@using Capstone.Web.Models;
@model LoginViewModel

@{
//Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1>Login</h1>
    @using (Html.BeginForm("Login", "Users", FormMethod.Post))
    {
        <div class="form">
            <div class="form-group row">
                Username
                <div class="form-width">
                    @Html.TextBoxFor(m => Model.Username, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => Model.Username)
                </div>
            </div>
            <div class="form-group row">
                Password
                <div class="form-width">
                    @Html.PasswordFor(m => Model.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => Model.Password)
                    @Html.ValidationMessage("invalid-login")
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
    <div class="row">
        <p>Not A Member? Sign Up Today!</p>
        <a href="@Url.Action("Register", "Users")">Register As New User</a>
    </div>

</div>


