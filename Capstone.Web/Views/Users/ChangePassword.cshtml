@using Capstone.Web.Models;
@model ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body class="full_background">
    <div class="container-fluid" style="height: 720px;">
        <div class="login-margin">
            <h1>Change Password</h1>
            <br />

            @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post))
            {
                <div class="form-group row boxesPadding">
                    <div class="col-sm-4 col-sm-push-4">
                      
                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeHolder = "New Password" })
                        @Html.ValidationMessageFor(m => m.NewPassword)
                    </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-push-4">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeHolder = "Confirm Password" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary submit_button">Change Password</button>
            }
        </div>
    </div>
    </div>
</body>