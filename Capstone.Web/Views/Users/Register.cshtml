@using Capstone.Web.Models
@model RegisterViewModel

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center">
    <h1>Register</h1>
    @using (Html.BeginForm("Register", "Users", FormMethod.Post))
    {
        <!--FIRST NAME-->
        <div class="row">
            <div class="form-group col-lg-4">
                <h3>First Name</h3>
            </div>
            <div class="form-width2 col-lg-4">
                @Html.TextBoxFor(m => Model.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => Model.FirstName)
            </div>
        </div>

        <!--LAST NAME-->
        <div class="row">
            <div class="form-group col-lg-4">
                <h3>Last Name</h3>
            </div>
            <div class="form-width2 col-lg-4">
                @Html.TextBoxFor(m => Model.LastName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => Model.LastName)
            </div>
        </div>

        <!--EMAIL-->
        <div class="row">
            <div class="form-group col-lg-4">
                <h3>Email</h3>
            </div>
            <div class="form-width2 col-lg-4">
                @Html.TextBoxFor(m => Model.EmailAddress, new { type = "email", @class = "form-control"})
                @Html.ValidationMessageFor(m => Model.EmailAddress)
            </div>
        </div>

        <!--USERNAME-->
        <div class="row">
            <div class="form-group col-lg-4">
                <h3>Username</h3>
            </div>
            <div class="form-width2 col-lg-4">
                @Html.TextBoxFor(m => Model.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => Model.Username)
            </div>
        </div>

        <!--PASSWORD-->
        <div class="row">
            <div class="form-group col-lg-4">
                <h3>Password</h3>
            </div>
            <div class="form-width2 col-lg-4">
                @Html.PasswordFor(m => Model.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => Model.Password)
            </div>
        </div>

        <!--PASSWORD-->
        <div class="row">
            <div class="form-group col-lg-4">
                <h3>Confirm Password</h3>
            </div>
            <div class="form-width2 col-lg-4">
                @Html.PasswordFor(m => Model.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => Model.ConfirmPassword)
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    }
</div>
