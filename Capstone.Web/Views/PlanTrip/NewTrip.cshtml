@using Capstone.Web.Models
@model MyTripViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="background-color: red; color: white;"><h1>My Trip</h1></div>
    <div class="row">
        <!--FILTER SECTION-->
        <div class="col-lg-3" style="background-color: orange; height: 400px; color: black;">
            <h2>Filter By:</h2>
            @{
                foreach (string category in Model.Categories)
                {
                    <p>
                        @Html.CheckBox(category, false, new { value = category })
                        <span>@category</span>
                    </p>
                    <p>
                        @Html.TextBox("search", "Enter Search Terms")
                        <button class="clearFilter"><span class="glyphicon glyphicon-remove-circle"></span></button>
                    </p>
                }
                <p>
                    <h5>Radius (miles)</h5>
                    @Html.TextBox("mileRadius", 10, new { type = "number", min = 10, max = 100 })
                </p>
            }
        </div>

        <!--MAP AND DETAIL SECTIONS-->
        <div class="col-lg-6">
            <!--MAP-->
            <div class="row" style="background-color: blue;">
                <div class="col-lg-12">

                </div>
            </div>

            <!--DETAILS-->
            <div class="row" style="background-color: yellow;"></div>
        </div>

        <!--CURRENT TRIP SECTION-->
        <div class="col-lg-3" style="background-color: lightblue; height: 400px; color: black;">
            <h2>Current Trip</h2>
            @{
                using (Html.BeginForm("MyTrips", "PlanTrip", FormMethod.Post))
                {
                    <p>
                        <h5>Name</h5>
                        @Html.TextBox("tripName", "My New Trip")
                    </p>

                    <p>
                        <h5>Description</h5>
                        @Html.TextArea("description")
                    </p>
                    <p>
                        <h5>Date</h5>
                        @Html.TextBox("date", DateTime.Now, new { type = "date" })
                    </p>

                    <button>Save</button>
                }
            }
        </div>
    </div>
</div>


