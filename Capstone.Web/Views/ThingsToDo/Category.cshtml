@using Capstone.Web.Models.ViewModel;
@using Capstone.Web.Models;
@model ThingsToDoViewModel 

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="category-jumbo">
    @*<img East 4th />*@
    <h2>@Model.Category</h2>
</div>

<span id="openCatBtn" style="font-size: 30px; cursor: pointer;">&#9776; Filter Options</span>

<div class="col-md-3 filter-container sidenav" id="mySidenav">
    <span id="closeCatBtn" class="closebtn" style="cursor: pointer;">X</span>
    <h2>Filter</h2>
    <hr />
    <h2>Rating</h2>
    <div class="checkboxContainer" style="padding-right: 5px; margin-left: -10px;">
     
            <p id="1-rating" class="checkbox_rating checkbox-inline" style="margin-left: 10px;  padding-bottom:20px;">@Html.CheckBox("avgRating-1", true) <img src="~/Content/Images/1-star.png" style="width: 110px"></p>
            <p id="2-rating" class="checkbox_rating checkbox-inline" style="padding-bottom:20px">@Html.CheckBox("avgRating-2", true) <img src="~/Content/Images/2-star.png" style="width: 110px" /></p>
            <p id="3-rating" class="checkbox_rating checkbox-inline" style="padding-bottom:20px">@Html.CheckBox("avgRating-3", true) <img src="~/Content/Images/3-star.png" style="width: 110px" /></p>
            <p id="4-rating" class="checkbox_rating checkbox-inline" style="padding-bottom:20px">@Html.CheckBox("avgRating-4", true) <img src="~/Content/Images/4-star.png" style="width: 110px" /></p>
            <p id="5-rating" class="checkbox_rating checkbox-inline" style="padding-bottom:20px">@Html.CheckBox("avgRating-5", true) <img src="~/Content/Images/5-star.png" style="width: 110px" /></p>
       
    </div>

    <h2>Cost</h2>
    <div class="relative_costContainer">
        <p id="0-cost" class="checkbox_relative_cost">@Html.CheckBox("relative_cost-0", true) <img src="~/Content/Images/0-cost.png" style="width: 90px"></p>
        <p id="1-cost" class="checkbox_relative_cost">@Html.CheckBox("relative_cost-1", true) <img src="~/Content/Images/1-cost.png" style="width: 90px"></p>
        <p id="2-cost" class="checkbox_relative_cost">@Html.CheckBox("relative_cost-2", true) <img src="~/Content/Images/2-cost.png" style="width: 90px"></p>
        <p id="3-cost" class="checkbox_relative_cost">@Html.CheckBox("relative_cost-3", true) <img src="~/Content/Images/3-cost.png" style="width: 90px"></p>
        <p id="4-cost" class="checkbox_relative_cost">@Html.CheckBox("relative_cost-4", true) <img src="~/Content/Images/4-cost.png" style="width: 90px"></p>
        <p id="5-cost" class="checkbox_relative_cost">@Html.CheckBox("relative_cost-5", true) <img src="~/Content/Images/5-cost.png" style="width: 90px"></p>

    </div>
    <h2>Radius</h2>
        @Html.TextBox("mileRadius", 10, new { type = "number", min = 10, max = 100, step = 10})
</div>

