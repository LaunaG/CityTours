@using Capstone.Web.Models;
@model List<Trip>
@{
    ViewBag.Title = "MyTrips";
}

<h2>MyTrips</h2>
@{
    if (Model.Count == 0)
    {
        <h4>No Trips Saved</h4>
    }
    else
    {
        foreach (Trip t in Model)
        {
            <h4>@t.Name</h4>
            <h4>Date of Travel: @t.TripDate</h4>
            <p>@t.Description</p>
            <h4>Sites</h4>
            <ul>
                @foreach (Landmark landmark in t.Landmarks)
                {
                    <li>@landmark.Name</li>
                }
            </ul>
        }
    }
}

